{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@environments/*": ["src/environments/*"],
      "@routes/*": ["src/app/routes/*"],
      "@shared/*": ["src/app/shared/*"],
      "@components/*": ["src/app/shared/components/*"],

      "@pages/*": ["src/app/main/pages/*"],
      "@main/*": ["src/app/main/pages/main-page/*"],
      "@news/*": ["src/app/main/pages/news-page/*"],

      "@header/*": ["src/app/main/header/*"],
      "@footer/*": ["src/app/main/footer/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
